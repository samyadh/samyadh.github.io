{
  "version": 2,
  "projects": {
    "portfolio": {
      "root": "apps/portfolio",
      "sourceRoot": "apps/portfolio/src",
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@nrwl/web:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "docs",
            "index": "apps/portfolio/src/index.html",
            "main": "apps/portfolio/src/main.tsx",
            "polyfills": "apps/portfolio/src/polyfills.ts",
            "tsConfig": "apps/portfolio/tsconfig.app.json",
            "assets": [
              "apps/portfolio/src/favicon.ico",
              "apps/portfolio/src/assets"
            ],
            "styles": ["apps/portfolio/src/styles.scss"],
            "scripts": [],
            "webpackConfig": "@nrwl/react/plugins/webpack"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/portfolio/src/environments/environment.ts",
                  "with": "apps/portfolio/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@nrwl/web:dev-server",
          "options": {
            "buildTarget": "portfolio:build",
            "hmr": true
          },
          "configurations": {
            "production": {
              "buildTarget": "portfolio:build:production",
              "hmr": false
            }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/portfolio/**/*.{ts,tsx,js,jsx}"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/portfolio"],
          "options": {
            "jestConfig": "apps/portfolio/jest.config.js",
            "passWithNoTests": true
          }
        },
        "build-tailwind-css": {
          "builder": "@nrwl/workspace:run-commands",
          "outputs": [],
          "options": {
            "command": "npx tailwindcss-cli@latest build ./src/styles.scss -o src/assets/styles/tailwind.css",
            "cwd": "apps/portfolio"
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/react"
  },
  "generators": {
    "@nrwl/react": {
      "application": {
        "style": "scss",
        "linter": "eslint",
        "strict": true,
        "babel": true
      },
      "component": {
        "style": "scss"
      },
      "library": {
        "style": "scss",
        "linter": "eslint",
        "strict": true
      }
    }
  },
  "defaultProject": "portfolio"
}
